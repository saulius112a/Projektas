@model Eshop.Data.Entities.Account
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prisijungimas</h2>

@if (TempData["ShowSuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Encode(TempData["ShowSuccessMessage"])
    </div>
}

@if (TempData["ShowErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Encode(TempData["ShowErrorMessage"])
    </div>
}

<form method="post">
    <div class="form-group form-row">
        <label class="col-2 col-form-label">@Html.DisplayNameFor(model => model.Email)</label>
        <input class="col-4 form-control" type="email" name="Email" required />
    </div>

    <div class="form-group form-row">
        <label class="col-2 col-form-label">@Html.DisplayNameFor(model => model.Password)</label>
        <input class="col-4 form-control" type="password" name="Password" required />
    </div>
    
    <button type="submit" class="btn btn-primary">Prisijungti</button>
</form>

