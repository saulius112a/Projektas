
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<form method="post">
    <p color="red">@ViewBag.Error</p>
    <input type="email" name="Email" placeholder="E-mail" required/><br />
    <input type="password" name="Password" placeholder="Password" required/><br />
    <input type="password" name="repeatPassword" placeholder="Re-peat Password" required/><br />
    <h3>Papildoma informacija</h3>
    <input type="text" name="Name" placeholder="Vardas" /><br />
    <input type="text" name="LastName" placeholder="Pavardė" /><br />
    <input type="text" name="Address" placeholder="Adresas" /><br />
    <input type="text" name="Phone" placeholder="Telefono numeris" /><br />
    <input type="text" name="ZipCode" placeholder="Pašto kodas" /><br />
    <input type="submit" />
</form>

