<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eshop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-select.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <LINK href="~/Content/bootstrap-select.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("IS projektas - El. parduotuvė", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pagrindinis", "Index", "Home")</li>
                    <li>@Html.ActionLink("Apie", "About", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @* Prisijungusio meniu *@
                    @if (Request.IsAuthenticated)
                    {
                        <span class="navbar-text">Krepšelis</span>  @*TODO: turės būt linkas*@ 

                        <li class="dropdown">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @using Eshop.Data.Entities

                                @if (Session["role"] != null && (Account.AccRole)Session["role"] == Account.AccRole.admin)
                                {
                                    <li>@Html.ActionLink("Administravimo panelė", "AdminMain", "Admin")</li>
                                }

                                @if (Session["role"] != null && (Account.AccRole)Session["role"] == Account.AccRole.employee)
                                {
                                    <li>@Html.ActionLink("Darbuotojo panelė", "EmployeeMain", "Admin")</li>
                                }

                                <span class="navbar-text">Krepšelis</span>  @*TODO: turės būt linkas*@
                                <li>@Html.ActionLink("Profilis", "Profile", "Account")</li>
                                <li>@Html.ActionLink("Atsijungti", "LogOut", "Account")</li>
                            </ul>
                        </li>

                    }
                    @* Neprisijungusio meniu *@
                    else
                    {
                        <li>@Html.ActionLink("Registruotis", "Register", "Account")</li>
                        <li>@Html.ActionLink("Prisijungti", "LogIn", "Account")</li>
                    }
                </ul>
            </div>
            <div style="width:auto; background-color:aqua">
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IS projektas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
